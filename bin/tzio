#!/bin/bash
source "$(dirname "${BASH_SOURCE[0]}")/_resolve.sh"

readonly THIS_FILE=$(resolve_file ${BASH_SOURCE[0]})
readonly DIR=$(dirname "$THIS_FILE")

readonly RUST_COMPILER=$DIR/rs-parser/target/debug/rs-parser

function print_help() {
	cat <<HELP
Usage:
	$(basename $0) <command>

Commands:
  build: Builds a TZ IO program
  run: Runs a compiled TZ IO program
	exec: Runs and copiles a TZ IO program

Options:
	-h, --help: Prints this help message
HELP
	exit 0
}

compiler=
readonly command=$1
shift
case $command in
	-h|--help) print_help ;;
  build) $DIR/tzio-build $@ ;;
  run) $DIR/tzio-run $@ ;;
  exec) $DIR/tzio-exec $@ ;;
  *) echo -e "\e[31mUnknown command $command\e[0m"
    exit 1 ;;
esac